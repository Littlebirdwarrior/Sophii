{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <main>
        <h1>Inscription</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.nom_usage) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.tel) }}
        {{ form_row(registrationForm.roles) }}
        {{ form_row(registrationForm.plainPassword)}}
        {{ form_row(registrationForm.RGPDconsent) }}

        <button type="submit" class="btn">Enregister</button>
        {{ form_end(registrationForm) }}

        <div>
            {% if app.user %}
                Ce n'est pas vous ? <a href="{{ path('app_logout') }}">DÃ©connexion</a>
            {% endif %}
            Pas encore inscrit ? <a href="{{ path('app_login') }}">Se connecter</a>
        </div>
    </main>


{% endblock %}
