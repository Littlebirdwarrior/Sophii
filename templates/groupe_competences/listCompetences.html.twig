{% extends 'base.html.twig' %}

{% block title %} {{activite}}{% endblock %}

{% block body %}

    <section class="container">
        <h2>{{activite}}</h2>
        <hr>
        <div>
            {% for gc in activite.groupescompetences %}
                {{ gc }}<br>
                <a href="{{ path('remove_groupeCompetence', {'activite': activite.id ,'groupescompetence': gc.id}) }}">Supprimer</a>
            {%endfor %}
        </div>
        <hr style="border-color:red">
        <div>
            {% for ngc in listCompetences %}
                {{ ngc }}<br>
                <a  href="{{ path('add_groupeCompetence', {'activite': activite.id, 'groupescompetence': ngc.id}) }}">Ajouter</a>
                <hr>
            {%endfor %}
        </div>

    </section>
