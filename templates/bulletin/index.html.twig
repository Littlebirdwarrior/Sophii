{% extends 'base.html.twig' %}

{% block title %}Bulletin{% endblock %}

{% block body %}
    <div class="container">
        <div class="index-controls">
        <div>
            <p class="fil-ariane"><span>Listes des bulletins</span> - {{ "now"|date("d/m/Y")}}</p>
            <h1>Mes bulletins</h1>
        </div>
        <a class="button" href="{{ path('app_eleve') }}"><i class="fa-solid fa-plus"></i> Ajouter un bulletin à un élève</a>
    </div>

        <table class="table-feuille-route">
            <thead>
            <tr>
                <th>Élèves</th>
                <th>Dates</th>
                <th>Édition</th>
            </tr>
            </thead>

            <tbody>
            {% for bulletin in bulletins %}
                <tr>
                    <td>
                        <a href="{{ path('show_bulletin', {'id': bulletin.id}) }}">{{bulletin}}</a>
                    </td>
                    <td>
                        {{bulletin.getDate() |format_datetime('none', 'short', locale='fr')}}
                    </td>
                    <td>
                        <a class="" href="{{ path('update_bulletin', {'id': bulletin.id}) }}">Éditer</a>
                        <a class="" href="{{ path('delete_bulletin', {'id': bulletin.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    {{ dump(bulletins) }}
{% endblock %}