{% extends 'base.html.twig' %}

{% block title %}Liste des enseignants de l'école!{% endblock %}

{% block body %}
    <main class="container">
        <h1>Liste des enseignants de l'école</h1>
        {% for enseignant in enseignants %}
            {% for role in enseignant.roles%}
                {% if role == "ROLE_ENS" %}
                    <a href="#">{{enseignant}}</a><br>
                    <a class="" href="{{ path('update_user', {'id': enseignant.id}) }}">Éditer</a>
                    <a class="" href="{{ path('delete_user', {'id': enseignant.id}) }}">Delete</a> <br>
                {% endif %}
            {% endfor%}
            {#            <a class="" href="{{ path('update_user', {'id': user.id}) }}">Éditer</a>#}
            {#            <a class="" href="{{ path('delete_user', {'id': user.id}) }}">Delete</a> <br>//["ROLE_PARENT"]#}

        {% endfor %}

    </main>

{% endblock %}