{% extends 'base.html.twig' %}

{% block title %}Liste des parents de l'école!{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des utilisateurs de l'école</h1>

</div>
<div class="index-controls">
    <div>
        <p class="fil-ariane"><span>Tous les utilisateurs de Sophii </span> - {{ "now"|date("d/m/Y") }}</p>
        <h1>Liste des utilisateurs de Sophii</h1>
    </div>
    <a class="button" href="{{ 'app_register' }}"><i class="fa-solid fa-plus"></i></a>
</div>
<article class="user-box">
    {% for user in users %}
        <div class="card-user-unlink">
            <a href="{{ path('show_user', {'id': user.id}) }}">
                <figure>
                    <img src="{{ asset('assets/uploads/user/mini/200x200-'~ user.images[0].nom) }}" alt="{{ user }}"
                         width="200px" height="200px"/>
                </figure>
                <ul class="user-description">
                    <li>Nom : <span>{{ user.prenom }} {{ user.nom }}</span></li>
                </ul>
            </a>

            <p class="card-user-controls">
                <a class="button btn-small btn-update" href="{{ path('update_user', {'id': user.id}) }}"><i
                            class="fa-solid fa-pen-to-square"></i></a>
                <a class="button btn-small btn-delete" href="{{ path('delete_user', {'id': user.id}) }}) }}"><i
                            class="fa-solid fa-trash"></i></a>
            </p>
        </div>
    {% endfor %}
{% endblock %}
