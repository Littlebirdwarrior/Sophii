{% extends 'base.html.twig' %}

{% block title %}Liste des consignes{% endblock %}

{% block body %}
    <div class="container">
        <div class="index-controls">
            <div>
                <p class="fil-ariane"><span>Liste des consignes </span> - {{ "now"|date("d/m/Y")}}</p>
                <h1>Liste des consignes</h1>
            </div>
            <a class="button" href="{{ path('app_consigne_add') }}"><i class="fa-solid fa-plus"></i></a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th class="taille-2 resp-justify-center">Groupe</th>
                <th class="taille-2 resp-justify-center">Consigne</th>
                <th class="taille-2">Éditer</th>
            </tr>
            </thead>

            <tbody>
            {% for consigne in consignes %}
                <tr class="table-row">
                    <td class="table-description resp-justify-center taille-2">
                        <ul>
                            <li class="taille-2 resp-justify-center pills">{{consigne.groupeConsignes.titre}}</li>
                        </ul>
                    </td>
                    <td class="table-description resp-justify-center taille-2">
                        <ul>
                            <li class="taille-2 resp-justify-center text-center">{{consigne.libelle}}</li>
                        </ul>
                    </td>
                    <td class="table-action taille-2">
                        <a title="éditer la consigne" class="button btn-small btn-update" href="{{ path('update_consigne', {'id': consigne.id}) }}"><i class="fa-solid fa-pen"></i></a>
                        <a title="supprimer la consigne" class="button btn-small btn-delete" href="{{ path('delete_consigne', {'id': consigne.id}) }}"> <i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
