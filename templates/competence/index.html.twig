{% extends 'base.html.twig' %}

{% block title %}Liste des competences{% endblock %}

{% block body %}
    <section class="container">
        <div class="index-controls">
            <div>
                <p class="fil-ariane"><span>Liste des compétences </span> - {{ "now"|date("d/m/Y")}}</p>
                <h1>Liste des competences</h1>
            </div>
            <a class="button" href="{{ 'competence/add' }}"><i class="fa-solid fa-plus"></i></a>
        </div>

        <article>
            <div class="card-competence">
            {% for competence in competences %}
                <a class="card-competence" href="{{ path('show_competence', {'id':competence.id}) }}">
                        <figure>
                            <img src="{{ asset('assets/img/competence/logique.png')}}" alt="img logique"/>
                        </figure>
                        <h2>
                            {{competence.libelle}}
                        </h2>
                        <div class="dropdown-controls">
                            <a class="" href="{{ path('update_competence', {'id': competence.id}) }}">Éditer</a>
                            <a class="" href="{{ path('delete_competence', {'id': competence.id}) }}">Delete</a>
                        </div>
                    </a>

            {% endfor %}
            </div>
        </article>
    </section>
{% endblock %}
