{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}


{% block body %}

    <main>
        <section class="container">
            <p>Mon profil {{ app.user.stringRoles }} - Année {{ "now"|date_modify("-1 year")|date("Y") }}
                /{{ "now" | date("Y") }}</p>
            <h1>Bienvenue <span class="text-primary"></span>{{ app.user.prenom }}</h1>
            <article class="homebox">
                {% block homecard %}

                    <div class="homecard">
                        <a href="{{ path('app_classe') }}"> Les classes</a>
                    </div>

                    <div class="homecard">
                        <a href="{{ path('app_eleve') }}"> Les élèves</a>
                    </div>

                    <div class="homecard">
                        <a href="{{ path('app_bulletin') }}">Les bulletins #</a>
                    </div>

                    <div class="homecard">
                        <a href="{{ path('app_groupe_consignes') }}"> Les groupes de consignes</a>
                    </div>

                    <div class="homecard">
                        <a href="{{ path('app_groupe_competences') }}"> Les groupes de compétences</a>
                    </div>
                    <div class="homecard">
                        <a href="{{ path('app_feuille_route') }}"> Les feuilles de route</a>
                    </div>
                    <div class="homecard">
                        <a href="{{ path('app_activite') }}"> Les activités</a>
                    </div>
                {% endblock %}
            </article>
        </section>
    </main>

{% endblock %}

