{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}


{% block body %}

    <main>
        <section class="container">
            <p>Mon profil {{ app.user.stringRoles }} - Année {{ "now"|date_modify("-1 year")|date("Y") }}
                /{{ "now" | date("Y") }}</p>
            <h1>Bienvenue <span class="text-primary"></span>{{ app.user.prenom }}</h1>
            <article class="homebox">
                {% block homecard %}

                    <a href="{{ path('app_classe') }} " class="homecard bg-1">
                        <p>Les classes</p>
                    </a>

                    <a href="{{ path('app_eleve')}}" class="homecard bg-2">
                         <p>Les élèves</p>
                    </a>

                    <a href="{{ path('app_bulletin') }}" class="homecard bg-3">
                        <p>Les bulletins</p>
                    </a>

                    <a href="{{ path('app_groupe_consignes') }}" class="homecard bg-4">
                        <p> Les groupes de consignes</p>
                    </a>

                    <a href="{{ path('app_consigne') }}" class="homecard bg-4">
                        <p> Les consignes</p>
                    </a>

                    <a href="{{ path('app_groupe_competences') }}" class="homecard bg-5">
                        <p> Les groupes de compétences</p>
                    </a>
                    <a href="{{ path('app_competence') }}" class="homecard bg-5">
                        <p> Les compétences</p>
                    </a>
                    <a href="{{ path('app_feuille_route') }}" class="homecard bg-1">
                        <p> Les feuilles de route</p>
                    </a>
                    <a href="{{ path('app_activite') }}" class="homecard bg-2">
                        <p> Les activités</p>
                    </a>
                {% endblock %}
            </article>
        </section>
    </main>

{% endblock %}

